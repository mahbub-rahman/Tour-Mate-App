<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mahbub.tourmate.fragments.WeatherFragment">
<include layout="@layout/search_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:id="@+id/image_weather"
            android:src="@drawable/sunny"/>
    <TextView
        android:id="@+id/temp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25.6C"
        android:layout_gravity="center"
        android:textSize="34sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:background="@drawable/shape"
        android:padding="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New York,Us"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="@color/colorWeather"/>
    <TextView
        android:id="@+id/current_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currently: 09:39 AM"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="@color/colorWeather"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/weather_icon_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/clear"/>
        <TextView
            android:id="@+id/main_weather_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:padding="5dp"
            android:textColor="@color/colorWeather"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather_desc_tv"
        android:text="the weather will remine clear until midnight.then w "
        android:layout_gravity="center"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/colorWeather"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/shape_weather">
    <include layout="@layout/sunrise_layout"/>
    <include layout="@layout/sunset_layout"/>
    <include layout="@layout/current_details_layout" />
</LinearLayout>


</LinearLayout>
</ScrollView>